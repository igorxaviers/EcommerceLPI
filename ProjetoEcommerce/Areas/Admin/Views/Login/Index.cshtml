@{
    ViewData["Title"] = "Login Admin";
    Layout = "~/Views/Shared/_LayoutAdminLimpo.cshtml";
}

@section Scripts {
    <script src="~/views/login/index.js"></script>
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-12 col-md-7">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row mt-5    ">
                        <div class="col">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form class="user" id="form-login">
                                    <div class="form-group">
                                        <input type="text" name="login" class="form-control form-control-user"
                                               id="exampleInputEmail"
                                               placeholder="Insira o login...">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="senha" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password">
                                    </div>
                                    <button type="button" onclick="indexLogin.login()" class="btn btn-primary btn-user btn-block">ENTRAR</button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
