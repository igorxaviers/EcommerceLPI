@{
    ViewData["Title"] = "CategoriaView";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Scripts {
    <script src="~/views/categoria/index.js"></script>
    <script src="~/client-app/dist/views/todo/Index.js"></script>
}
<div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-left">
                        <h1 class="h4 text-gray-900 mb-4">Cadastro de Categoria</h1>
                    </div>
                    <form class="user" id="form-categoria">
                        <div class="form-group">
                            <input type="text" name="id" class="form-control" placeholder="Id" disabled>
                        </div>
                        <div class="form-group">
                            <label>Nome da categoria</label>
                            <input type="text" name="nome" class="form-control" placeholder="Nome">
                        </div>
                        <button type="button" onclick="indexCat.cadastrar()" class="btn btn-primary w-100 mt-5">Cadastrar categoria</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

